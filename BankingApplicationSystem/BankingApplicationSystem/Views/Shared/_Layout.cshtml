<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bank Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bank Management System", "BankManagementSystem", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav pull-right" style="padding-left : 780px">
                    <li>@Html.ActionLink("Register User", "Index", "User", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    @*<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "BankManagementSystem", "Home")</li>
                    <li>@Html.ActionLink("Perform Transaction", "Index", "PerformTransaction")</li>
                    <li>@Html.ActionLink("View Transaction details", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Apply Home Loan", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Get Home Loan Details", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Apply Educational Loan", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Get Educational Loan Details", "Contact", "Home")</li>
                    @*<li>@Html.ActionLink("Register User", "Index", "User")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bank Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
