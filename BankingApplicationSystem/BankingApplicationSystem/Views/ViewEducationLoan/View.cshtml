@model IEnumerable<BankingApplicationSystem.Models.EducationLoan.Edu_Loan_Details>
@{ 
    if (Model.Count() != 0)
    {
<table class="table table-bordered">
    <tr>
        <th>
            Loan ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACCOUNT_NUMBER)
        </th>
        <th>
            Loan Account Number
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EDU_LOAN_AMOUNT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EDU_LOAN_APPLY_DATE)
        </th>
        <th>
            Loan Duration (Years)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.COURSE_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.COURSE_FEE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FATHER_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_CARD_NUMBER)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FATHER_ANNUAL_INCOME)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EDUCATION_LOAN_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACCOUNT_NUMBER)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDU_LOAN_ACCOUNT_NUMBER)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDU_LOAN_AMOUNT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDU_LOAN_APPLY_DATE.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDU_LOAN_DURATION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COURSE_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COURSE_FEE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FATHER_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_CARD_NUMBER)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FATHER_ANNUAL_INCOME)
        </td>
    </tr>
}

</table>
    }
    else
    {
        <div>No records found.</div>
    }
}